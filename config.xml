<?xml version='1.0' encoding='utf-8'?>
<widget id="org.connor.bellerosehub" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Bellerose Hub</name>
    <icon src="logo.png" />
    <description>
        Bellerose News on the go
    </description>
    <author email="connor.leighton@5565.ca" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="ErrorUrl" value="error.html"/>
    <preference name="BackgroundColor" value="0x00212121"/>
    <preference name="StatusBarBackgroundColor" value="#B71C1C"/>
</widget>
